extends layout

block content
  form.form-signin(action="/users/login", method="post")
    h1.h3.mb-3.font-weight-normal Please sign in
    input.form-control(type='text', name="username", placeholder='Username', required='', autofocus='')
    input.form-control(type='password', name="password", placeholder='Password', required='')
    button.auth-btn.btn.btn-lg.btn-dark.btn-block(type='submit') Sign in