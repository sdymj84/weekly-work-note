extends layout

block content
  form.form-signin(action="/users/login", method="post")
    h2.mb-3.bold Please sign in
    input.form-control(type='text', name="username", placeholder='Username', required='', autofocus='', autocomplete='off')
    input.form-control(type='password', name="password", placeholder='Password', required='')
    button.auth-btn.btn.btn-lg.btn-dark.btn-block(type='submit') Sign in
  - if (message)
    #show-err-msg
    #login-err-msg.toast= message